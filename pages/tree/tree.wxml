<!--pages/tree/tree.wxml-->
<view class='page' style='background-color:white'>

   <view class="weui-grids">
      <block wx:for="{{gridData}}" wx:key="*this">
         <navigator url="" class="weui-grid" hover-class="weui-grid_active" data-name='{{item.text}}' bindtap='itemClick'>
            <image class="weui-grid__icon" src="{{item.icon}}" />
            <view class="weui-grid__label">{{item.text}}</view>
         </navigator>
      </block>
   </view>

</view>

<!-- toast节点（必须） -->
<van-toast id="van-toast" />